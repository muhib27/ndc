<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_5dp"
    android:layout_marginBottom="@dimen/size_5dp">

    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@color/white"-->
        <!--app:cardCornerRadius="@dimen/margin_0dp"-->
        <!--card_view:cardBackgroundColor="@android:color/white"-->
        <!--card_view:cardElevation="3dp"-->
        <!--card_view:cardUseCompatPadding="true">-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_0dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:padding="@dimen/size_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/userImage"
                android:src="@drawable/ndc_icon"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="60dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:padding="@dimen/size_10dp"
                android:layout_weight="4.5"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name"
                    android:textColor="@color/ndc_color"
                    android:textSize="@dimen/text_size_17_sp"
                    android:textStyle="bold"
                    android:text="@string/nav_header_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/email"
                    android:textColor="@color/deep_ash"
                    android:textSize="@dimen/text_size_15_sp"
                    android:text="@string/nav_header_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/total"
                    android:textColor="@color/ndc_color"
                    android:textSize="@dimen/text_size_17_sp"
                    android:textStyle="bold"
                    android:text="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>



        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>


