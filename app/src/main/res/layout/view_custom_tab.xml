<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <!--&lt;!&ndash; Tab title &ndash;&gt;-->
    <TextView
        android:background="@drawable/tab_item_selector"
        android:id="@+id/tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <!--&lt;!&ndash; Tab divider &ndash;&gt;-->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/tab_title"
        android:layout_toRightOf="@+id/tab_title"
        android:background="@color/ndc_color" />
</RelativeLayout><!--android:background="@drawable/round_shape_background_transparent"-->