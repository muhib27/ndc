<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_5dp"
    android:layout_marginBottom="@dimen/size_5dp"
    android:layout_marginLeft="@dimen/size_10dp"
    android:layout_marginRight="@dimen/size_10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_0dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:padding="@dimen/size_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="date"
                    android:textColor="@color/card_cell_header"
                    android:textSize="@dimen/text_size_22_sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/attachment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/attachment_icon" />

                <ImageButton
                    android:background="@null"
                    android:id="@+id/dot_menu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/dot_menu_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/description"
                        android:lineSpacingExtra="@dimen/size_5dp"
                        android:layout_marginBottom="@dimen/size_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_2dp"
                        android:maxLines="2"
                        android:textColor="@color/deep_ash"
                        android:text="@string/rationale_ask_again"
                        android:textSize="@dimen/text_size_16_sp" />

                    <!--<View-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="@dimen/margin_1dp"-->
                        <!--android:layout_marginTop="@dimen/size_10dp"-->
                        <!--android:background="@color/card_cell_view" />-->

                    <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="@dimen/size_10dp"-->
                        <!--android:orientation="horizontal">-->

                        <!--<TextView-->
                            <!--android:id="@+id/assign_date"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:gravity="start|center_vertical"-->
                            <!--android:text="Assign Date: 15/11/2018"-->
                            <!--android:textSize="@dimen/text_size_12_sp" />-->


                        <!--<TextView-->
                            <!--android:id="@+id/due_date"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:gravity="right"-->
                            <!--android:text="End Date: 15/11/2018"-->
                            <!--android:textSize="@dimen/text_size_12_sp" />-->

                    <!--</LinearLayout>-->


                </LinearLayout>

                <View
                    android:layout_width="@dimen/margin_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@color/white" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_1dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:background="@color/card_cell_view" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/assign_date"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Assign Date: 15/11/2018"
                    android:textSize="@dimen/text_size_12_sp" />


                <TextView
                    android:layout_weight="1"
                    android:id="@+id/due_date"
                    android:layout_width="@dimen/margin_0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="End Date: 15/11/2018"
                    android:textSize="@dimen/text_size_12_sp" />

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>


