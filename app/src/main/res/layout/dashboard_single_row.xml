<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="@dimen/margin_0dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/cell_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/size_10dp">

                <LinearLayout
                    android:padding="@dimen/size_3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/itemImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/size_10dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="start"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/size_10dp"
                    android:text="date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20_sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/attachment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/attachment_icon" />

                <ImageButton
                    android:id="@+id/dot_menu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/dot_menu_w" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:background="@color/ash_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:id="@+id/subTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_2dp"
                        android:lineSpacingExtra="@dimen/size_5dp"
                        android:maxLines="2"
                        android:text="This is Title"
                        android:textColor="@color/deep_ash"
                        android:textSize="@dimen/text_size_18_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_2dp"
                        android:lineSpacingExtra="@dimen/size_5dp"
                        android:maxLines="2"
                        android:text="@string/rationale_ask_again"
                        android:textColor="@color/deep_ash"
                        android:textSize="@dimen/text_size_16_sp" />

                    <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="@dimen/margin_1dp"-->
                    <!--android:layout_marginTop="@dimen/size_10dp"-->
                    <!--android:background="@color/card_cell_view" />-->

                    <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="@dimen/size_10dp"-->
                    <!--android:orientation="horizontal">-->

                    <!--<TextView-->
                    <!--android:id="@+id/assign_date"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:gravity="start|center_vertical"-->
                    <!--android:text="Assign Date: 15/11/2018"-->
                    <!--android:textSize="@dimen/text_size_12_sp" />-->


                    <!--<TextView-->
                    <!--android:id="@+id/due_date"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:gravity="right"-->
                    <!--android:text="End Date: 15/11/2018"-->
                    <!--android:textSize="@dimen/text_size_12_sp" />-->

                    <!--</LinearLayout>-->


                </LinearLayout>

                <View
                    android:layout_width="@dimen/margin_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@color/white" />

            </LinearLayout>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/margin_1dp"-->
            <!--android:layout_marginTop="@dimen/size_10dp"-->
            <!--android:background="@color/card_cell_view" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:orientation="horizontal"
                android:padding="@dimen/size_10dp">

                <TextView
                    android:id="@+id/assign_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Assign Date: 15/11/2018"
                    android:textSize="@dimen/text_size_12_sp" />


                <TextView
                    android:id="@+id/due_date"
                    android:layout_width="@dimen/margin_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="End Date: 15/11/2018"
                    android:textSize="@dimen/text_size_12_sp" />

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>


