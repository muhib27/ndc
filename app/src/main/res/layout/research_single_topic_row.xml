<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_5dp"
    android:layout_marginBottom="@dimen/size_5dp">

    <!--<android.support.v7.widget.CardView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:background="@color/white"-->
    <!--app:cardCornerRadius="@dimen/margin_0dp"-->
    <!--card_view:cardBackgroundColor="@android:color/white"-->
    <!--card_view:cardElevation="3dp"-->
    <!--card_view:cardUseCompatPadding="true">-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_0dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/size_10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nav_header_desc"
                android:textColor="@color/deep_ash"
                android:textSize="@dimen/text_size_15_sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nav_header_desc"
                android:textColor="@color/ndc_color"
                android:textSize="@dimen/text_size_17_sp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="@dimen/size_10dp"
                android:maxLines="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/test_description"
                android:textColor="@color/deep_ash"
                android:textSize="@dimen/text_size_15_sp" />
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>