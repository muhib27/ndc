<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:padding="@dimen/size_10dp"
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5 min"
            android:textSize="@dimen/text_size_14_sp" />

        <RelativeLayout
            android:layout_width="@dimen/size_20dp"
            android:layout_height="match_parent">
            <View
                android:layout_centerInParent="true"
                android:id="@+id/flag"
                android:layout_width="4dp"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:paddingLeft="@dimen/size_10dp" />

            <View
                android:layout_marginLeft="2dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:id="@+id/circle"
                android:layout_width="@dimen/size_15dp"
                android:layout_height="@dimen/text_size_15_sp"
                android:background="@drawable/circle_shape_background_green"
                 />


        </RelativeLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:paddingTop="@dimen/size_5dp"
                android:textColor="@color/black"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size_10dp"
                android:maxLines="1"
                android:text="@string/activity_login_txt_sign_in"
                android:textSize="@dimen/text_size_17_sp" />

            <TextView
                android:id="@+id/subTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size_10dp"
                android:maxLines="2"
                android:text="@string/activity_login_txt_sign_in"
                android:textSize="@dimen/text_size_15_sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>


