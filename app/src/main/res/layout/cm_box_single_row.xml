                        android:layout_marginTop="@dimen/margin_2dp"
                        android:lineSpacingExtra="@dimen/size_5dp"
                        android:text="Assigned By: "
                        android:textColor="@color/deep_ash"
                        android:textSize="@dimen/text_size_16_sp" />

                    <TextView
