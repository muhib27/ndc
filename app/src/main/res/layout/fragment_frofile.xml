<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_background"
    android:padding="@dimen/size_10dp"
    tools:context="com.classtune.ndc.fragment.ProfileFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_0dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10dp">

                <ImageButton
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:src="@drawable/edit_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/ndc_logo"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="2dp" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/size_5dp"
                android:text="Air Chief Marshal Esrar"
                android:textColor="@color/ndc_color"
                android:textSize="@dimen/text_size_22_sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/size_5dp"
                android:text="esrar@ndc.gov.bd"
                android:textColor="@color/ash"
                android:textSize="@dimen/text_size_15_sp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/size_3dp"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardElevation="3dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#035D74">

                        <TextView
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/size_5dp"
                            android:text="Service Number"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_15_sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/size_5dp"
                            android:text="Service"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_15_sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:paddingTop="@dimen/size_10dp"
                        android:paddingBottom="@dimen/size_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#047A97">

                        <TextView
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/size_5dp"
                            android:text="Military"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_19_sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/size_5dp"
                            android:text="Air Force"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_19_sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/bell_icon"
                            android:layout_weight="1"
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:padding="@dimen/size_5dp"
                            android:orientation="vertical"
                            android:layout_weight="4"
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Batch/Course No"
                                android:textSize="@dimen/text_size_15_sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textStyle="bold"
                                android:textColor="@color/ndc_color"
                                android:text="Batch/Course No"
                                android:textSize="@dimen/text_size_19_sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </LinearLayout>
                    <View
                        android:background="#F1F1F1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_2dp"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</ScrollView>
