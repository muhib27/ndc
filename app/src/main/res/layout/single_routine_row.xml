<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/nextClassView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view"
        app:cardCornerRadius="@dimen/margin_0dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/size_10dp"
                android:text="27 Nov 2018"
                android:textColor="#676767" />

            <View
                android:layout_width="@dimen/margin_2dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginBottom="@dimen/size_10dp"
                android:background="@color/today_color" />

            <LinearLayout
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3.5"
                android:orientation="vertical"
                android:padding="@dimen/size_10dp">

                <TextView
                    android:id="@+id/takenBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/size_15dp"
                    android:text="Mr Ashraf"
                    android:textColor="#676767"
                    android:textSize="@dimen/text_size_18_sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/size_15dp"
                    android:text="Mr Ashraf"
                    android:textColor="#676767"
                    android:textSize="@dimen/text_size_18_sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/size_15dp"
                    android:text="9:00 - 11:00"
                    android:textColor="#3dbca2"
                    android:textSize="@dimen/text_size_17_sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/size_15dp"
                        android:text="Phase:"
                        android:textColor="@color/ash"
                        android:textSize="@dimen/text_size_15_sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/lecturerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/size_5dp"
                        android:text="General Moin "
                        android:textColor="@color/ash"
                        android:textSize="@dimen/text_size_15_sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:orientation="vertical">

                <View
                    android:layout_marginTop="@dimen/size_10dp"
                    android:id="@+id/view"
                    android:layout_width="@dimen/size_10dp"
                    android:layout_height="@dimen/size_40dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/mode"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_below="@+id/view"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="SD" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

