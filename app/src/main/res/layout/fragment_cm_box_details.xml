<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_background"
    tools:context="com.classtune.ndc.fragment.InstructorDetailsFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_0dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp">

            <RelativeLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/title"
                    android:textSize="@dimen/text_size_17_sp" />

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/title"
                    android:maxLines="2"
                    android:text="@string/returned_from_app_settings_to_activity"
                    android:textColor="@color/dnc_color"
                    android:textSize="@dimen/text_size_19_sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleLayout"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_2dp"
                        android:lineSpacingExtra="@dimen/size_5dp"
                        android:text="Submitted By "
                        android:textColor="@color/deep_ash"
                        android:textSize="@dimen/text_size_16_sp" />

                    <TextView
                        android:layout_weight="1.5"
                        android:id="@+id/submitteBy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_2dp"
                        android:lineSpacingExtra="@dimen/size_5dp"
                        android:text="Fahim vi"
                        android:textColor="@color/deep_ash"
                        android:textSize="@dimen/text_size_16_sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_2dp"
                        android:lineSpacingExtra="@dimen/size_5dp"
                        android:text="Assigned By "
                        android:textColor="@color/deep_ash"
                        android:textSize="@dimen/text_size_16_sp" />

                    <TextView
                        android:layout_weight="1.5"
                        android:id="@+id/assignedBy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_2dp"
                        android:lineSpacingExtra="@dimen/size_5dp"
                        android:text="Fahim vi"
                        android:textColor="@color/deep_ash"
                        android:textSize="@dimen/text_size_16_sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_2dp"
                        android:lineSpacingExtra="@dimen/size_5dp"
                        android:text="Sumitted Date "
                        android:textColor="@color/deep_ash"
                        android:textSize="@dimen/text_size_16_sp" />

                    <TextView
                        android:layout_weight="1.5"
                        android:id="@+id/submittedDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_2dp"
                        android:lineSpacingExtra="@dimen/size_5dp"
                        android:text="Fahim vi"
                        android:textColor="@color/deep_ash"
                        android:textSize="@dimen/text_size_16_sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_2dp"
                        android:lineSpacingExtra="@dimen/size_5dp"
                        android:text="Due Date "
                        android:textColor="@color/deep_ash"
                        android:textSize="@dimen/text_size_16_sp" />

                    <TextView
                        android:layout_weight="1.5"
                        android:id="@+id/dueDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_2dp"
                        android:lineSpacingExtra="@dimen/size_5dp"
                        android:text="Fahim vi"
                        android:textColor="@color/deep_ash"
                        android:textSize="@dimen/text_size_16_sp" />
                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:text="@string/attachment"
                    android:textSize="@dimen/text_size_20_sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_2dp"
                    android:layout_marginLeft="@dimen/size_20dp"
                    android:layout_marginRight="@dimen/size_10dp"
                    android:background="@color/list_background" />

                <LinearLayout
                    android:id="@+id/attachment_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <!--<ImageView-->
                        <!--android:layout_width="50dp"-->
                        <!--android:layout_height="50dp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:layout_margin="@dimen/size_10dp"-->
                        <!--android:src="@drawable/ndc_logo" />-->

                    <!--<ImageView-->
                        <!--android:layout_width="50dp"-->
                        <!--android:layout_height="50dp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:layout_margin="@dimen/size_10dp"-->
                        <!--android:src="@drawable/ndc_logo" />-->

                    <!--<ImageView-->
                        <!--android:layout_width="50dp"-->
                        <!--android:layout_height="50dp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:layout_margin="@dimen/size_10dp"-->
                        <!--android:src="@drawable/ndc_logo" />-->
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</ScrollView>
